<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.mehdi.transitions.MainActivity">

    <LinearLayout
        android:id="@+id/checks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/scene_1"
            android:text="@string/scene_1"
            android:layout_weight="0.25"
            android:padding="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height" />

        <CheckBox
            android:id="@+id/scene_2"
            android:text="@string/scene_2"
            android:layout_weight="0.25"
            android:padding="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height" />

        <CheckBox
            android:id="@+id/scene_3"
            android:text="@string/scene_3"
            android:layout_weight="0.25"
            android:padding="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height" />

        <CheckBox
            android:id="@+id/scene_4"
            android:text="@string/scene_4"
            android:layout_weight="0.25"
            android:padding="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
